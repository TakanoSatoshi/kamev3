<assembly>
	<!-- includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>gnikrap-${project.version}</baseDirectory -->
	<formats>
    <format>tar.gz</format>
    <format>tar</format>
	</formats>
  
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>.</outputDirectory>
      <excludes>
        <exclude>*.sh</exclude>
        <exclude>**/*.config</exclude>
      </excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>.</outputDirectory>
      <includes>
        <include>**/*.config</include>
      </includes>
      <filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>.</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
		</fileSet>
    <!-- Gnikrap core -->
		<fileSet>
			<directory>${project.build.directory}/gnikrap-core</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
    <!-- Gnikrap doc -->
		<fileSet>
			<directory>${project.build.directory}/gnikrap-doc</directory>
			<outputDirectory>/WEB-CONTENT/gnikrap-doc/</outputDirectory>
		</fileSet>
	</fileSets>

