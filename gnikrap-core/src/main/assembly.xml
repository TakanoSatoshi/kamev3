<assembly>
	<formats>
		<format>dir</format>
    <format>tar.gz</format>
	</formats>
  
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>.</outputDirectory>
      <excludes>
        <exclude>*.sh</exclude>
      </excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>.</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
		</fileSet>
    
		<fileSet>
			<directory>src/main/WEB-CONTENT</directory>
			<outputDirectory>WEB-CONTENT</outputDirectory>
		</fileSet>
	</fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${gnikrap.uberjar}.jar</source>
      <outputDirectory>lib</outputDirectory>
    </file>
  </files>

  <dependencySets>
    <!-- Keep only what is not included in the uber-jar -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>lejos:*</include>
        <include>org.freedesktop.dbus:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
  
</assembly>
